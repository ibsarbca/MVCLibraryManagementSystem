@model IEnumerable<MVCLibraryManagementSystem.Models.AccessionRecord>

@{
    ViewBag.Title = "Accession Register";
}
<h1>Accession Register</h1>

<!--<p>
    @Html.ActionLink("Create New" ,"Create")
