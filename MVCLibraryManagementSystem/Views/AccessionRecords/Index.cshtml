</p>-->
<div class="row">
    <div class="col-md-4">
        <div class="input-group">
            <span class="input-group-btn">
                @using (Html.BeginForm("Index", "AccessionRecords", FormMethod.Get))
                {
                         @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new {@class="form-control" })
                        <input style="height:34px;width:88.23px; border-radius:4px ; border-style:solid;border-width:1px;border-color:transparent" 
                               type="submit" value="Search" />  
                }
            </span>
        </div>
    </div>
    <div class="col-md-4">
        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" 
                aria-haspopup="true" aria-expanded="false">
                Item Filter
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <ul>
                    <li><a class="dropdown-item" href="#">Books</a></li>
                    <li><a class="dropdown-item" href="#">Magazines</a></li>
                    <li><a class="dropdown-item" href="#">Newspapers</a></li>
                    <li><a class="dropdown-item" href="#">Question Papers</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<br />
<br />
<div class="container-fluid col-md-8 col-sm-6">
    <table class="table table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AccessionRecordId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfReceipt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Source)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>

        @foreach (var ar in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => ar.AccessionRecordId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => ar.Item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => ar.DateOfReceipt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => ar.Source)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => ar.Price)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = ar.AccessionRecordId }) |
                    @Html.ActionLink("Details", "Details", new { id = ar.AccessionRecordId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = ar.AccessionRecordId }) |
             
                    @Html.ActionLink("Issue Item", "Create", "IssuedItems", new { itemid = ar.Item.ItemId }, null)
              
                </td>   
            </tr>
        }

    </table>
</div>
    
